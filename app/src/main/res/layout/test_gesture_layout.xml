<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GestureTestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手势测试工具"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- 预设测试按钮 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="预设测试"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_test_long_press_drag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试长按并拖动" />

        <Button
            android:id="@+id/btn_test_pinch_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试双指捏合" />

        <Button
            android:id="@+id/btn_test_pinch_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试双指张开" />

        <Button
            android:id="@+id/btn_test_taps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试连续点击" />

        <!-- 自定义测试参数 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义测试参数"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起始X:"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/et_start_x"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="500" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起始Y:"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/et_start_y"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="500" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束X:"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/et_end_x"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束Y:"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/et_end_y"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="700" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="长按时间(ms):"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/et_long_press_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:text="3000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="移动时间(ms):"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/et_move_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:text="1000" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_test_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="执行自定义测试" />

        <!-- 使用说明 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用说明"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. 确保已开启辅助功能服务\n2. 点击测试按钮后，请在3秒内切换到目标应用\n3. 自定义测试可以调整起始位置、结束位置和时间参数"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView> 